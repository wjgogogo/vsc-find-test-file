{
  "name": "find-test-file",
  "displayName": "find-test-file",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:find-test-file.jumpToTest",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "contributes": {
    "commands": [
      {
        "command": "find-test-file.jumpToTest",
        "title": "Jump To Test/Source File",
        "category": "Find Test File"
      }
    ],
    "configuration": {
      "title": "Find Test File",
      "properties": {
        "findTestFile.testMatch": {
          "type": "string",
          "default": "**/*.+(spec|test).[jt]s?(x)",
          "markdownDescription": "The glob patterns that extension uses to detect test files. By default, it looks for `.js`, `.jsx`, `.ts`, `.tsx` files with a suffix of `.spec` or `.test` (*e.g. `example.spec.ts` or `example.test.js`*)."
        },
        "findTestFile.excludeFolder": {
          "type": "array",
          "default": [
            "node_modules"
          ],
          "markdownDescription": "The folders that are outside of scan range. By default, it excludes `node_modules`."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/micromatch": "^4.0.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "micromatch": "^4.0.4"
  }
}
